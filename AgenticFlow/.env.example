# PingFederate Ops Agent Configuration
# Copy this file to .env and update with your actual values

# ===== DATABASE CONFIGURATION =====
# MongoDB connection string (local or cloud)
MONGO_URI=mongodb://localhost:27017
# Alternative: MongoDB Atlas
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/

# Database name
DB_NAME=pf_agent

# ===== AI/LLM CONFIGURATION =====
# OpenAI API Key for CrewAI agents
OPENAI_API_KEY=sk-your-openai-api-key-here

# Alternative LLM providers (choose one)
# ANTHROPIC_API_KEY=your-anthropic-key-here
# AZURE_OPENAI_API_KEY=your-azure-openai-key-here
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/

# CrewAI model configuration
CREWAI_MODEL=gpt-4o-mini
# CREWAI_MODEL=claude-3-haiku-20240307
# CREWAI_MODEL=azure/gpt-4

# ===== SIMULATOR CONFIGURATION =====
# Base URL for PingFederate simulator (development only)
SIM_BASE_URL=http://localhost:8080

# ===== NOTIFICATION CONFIGURATION =====
# Slack webhook URL for license alerts
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration (optional)
SMTP_SERVER=smtp.company.com
SMTP_PORT=587
SMTP_USERNAME=pf-agent@company.com
SMTP_PASSWORD=your-email-password
ALERT_EMAIL_TO=ops-team@company.com

# ===== AUTHENTICATION (Production) =====
# PingFederate admin credentials (use secrets manager in production)
PF_ADMIN_USERNAME=Administrator
PF_ADMIN_PASSWORD=your-pf-admin-password

# OAuth configuration (alternative to basic auth)
PF_OAUTH_CLIENT_ID=your-oauth-client-id
PF_OAUTH_CLIENT_SECRET=your-oauth-client-secret

# ===== SECURITY =====
# JWT secret for API authentication
JWT_SECRET=your-super-secret-jwt-key-here

# Vault configuration (production)
VAULT_URL=https://vault.company.com:8200
VAULT_TOKEN=your-vault-token

# ===== MONITORING =====
# Application logging level
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG

# Metrics and monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# ===== DEVELOPMENT =====
# Enable debug mode
DEBUG=false

# Development database (use SQLite for local testing)
USE_FILE_STORAGE=false

# Skip SSL verification (development only)
SKIP_SSL_VERIFY=false
